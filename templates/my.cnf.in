#
# * server and clients
#
[client]
port		= ${ports:mysql}
socket		= ${mycnf:sock}

[mysqladmin]
user = root
password = "${userdata:mysql_pwd}"
socket		= ${mycnf:sock}

[mysqld]
user		= ${mycnf:user}
socket		= ${mycnf:sock}
port		= ${ports:mysql} 
basedir		= ${mycnf:basedir}
datadir		= ${mycnf:datadir}
tmpdir		= /tmp
bind-address = 127.0.0.1

#
# * Fine Tuning
#
key_buffer        = 64MB
query_cache_size  = 64MB
query_cache_limit = 4MB
table_cache       = 512
sort_buffer_size  = 32MB
tmp_table_size    = 64MB
max_allowed_packet	= 16M
thread_stack		= 192K
thread_cache_size       = 8
myisam-recover         = BACKUP
#
# * Query Cache Configuration
#
query_cache_limit	= 1M
query_cache_size        = 16M
#
# * Logging and Replication
#
general_log_file        = ${buildout:directory}/logs/mysql.log
log_error               = ${buildout:directory}/logs/mysql-error.log
#log_slow_queries	= ${buildout:directory}/logs/mysql-slow.log
#long_query_time = 2
#log-queries-not-using-indexes
#log_bin			= ${buildout:directory}/logs/mysql-bin.log
#expire_logs_days	= 10
#max_binlog_size         = 100M
#binlog_do_db		= include_database_name
#binlog_ignore_db	= include_database_name
#
# * Security Features
#
# chroot = /var/lib/mysql/
# ssl-ca=/etc/mysql/cacert.pem
# ssl-cert=/etc/mysql/server-cert.pem
# ssl-key=/etc/mysql/server-key.pem
 
[mysqldump]
quick
quote-names
max_allowed_packet	= 16M

[mysql]
#no-auto-rehash	# faster start of mysql but no tab completition
user = root
database = ${userdata:mysql_database}
password = "${userdata:mysql_pwd}"
socket		= ${mycnf:sock}
 
[isamchk]
